export LC_ALL="ja_JP.UTF-8"

script="${1-突然の死}"

template="${script//[ -~]/ }"
template="${template//[! ]/  }"

header="＿人${template//  /人}人＿"
footer="￣Y^${template//  /Y^}Y^￣"

echo "${header/ /}"
echo "＞　${script}　＜"
echo "${footer/ /}"

exit 0

